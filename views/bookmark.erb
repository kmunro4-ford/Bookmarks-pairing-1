<%= @bookmark_list %>

<h1>Would you like to add a bookmark</h1>
<form action=/add_bookmark method="post">
  <input type="text" name="new_bookmark_url" placeholder="Enter bookmark URL">
  <input type="text" name="new_bookmark_title" placeholder="Enter bookmark Title">
  <input type="submit" name="" value="Submit">
</form>

<h1>Would you like to edit an existing bookmark</h1>
<form action=/edit_bookmark method="post">
  <input type="text" name="edit_bookmark_old_title" placeholder="Enter existing bookmark Title">
  <input type="text" name="edit_bookmark_new_title" placeholder="Enter a new bookmark Title">
  <input type="text" name="edit_bookmark_new_url" placeholder="Enter a new bookmark URL">
  <input type="submit" name="" value="Submit3">
</form>

<h1>Would you like to remove a bookmark</h1>
<form action=/remove_bookmark method="post">
  <input type="text" name="remove_bookmark_title" placeholder="Enter bookmark Title">
  <input type="submit" name="" value="Submit2">
</form>
